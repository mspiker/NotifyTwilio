<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Confirm Message</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Confirm Message</h1>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (testResult) { %>
      <div class="alert alert-info"><%= testResult %></div>
    <% } %>
    <h4>Message Preview</h4>
    <div class="border p-3 mb-3" style="white-space: pre-line;"><%= message %></div>
    <h5>Send via: <%= method === 'sms' ? 'SMS' : 'Email' %></h5>
    <form action="/test" method="post" class="mb-4">
      <div class="mb-3">
        <label for="testPhone" class="form-label">Send test SMS to phone number</label>
        <input class="form-control" type="text" id="testPhone" name="testPhone" placeholder="+1234567890">
      </div>
      <button type="submit" class="btn btn-secondary">Send Test SMS</button>
    </form>
    <form action="/send" method="post">
      <input type="hidden" name="message" value="<%= message.replace(/"/g, '&quot;') %>">
      <input type="hidden" name="method" value="<%= method %>">
      <button type="submit" class="btn btn-success">Confirm and Send to All</button>
      <a href="/" class="btn btn-link">Cancel</a>
    </form>
    <h5 class="mt-4">Recipients</h5>
    <ul>
      <% contacts.forEach(function(contact) { %>
        <li><%= contact.firstName %> <%= contact.lastName %> - <%= method === 'sms' ? contact.phone : contact.email %></li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
